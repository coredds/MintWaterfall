{
  "name": "mintwaterfall",
  "version": "0.5.6",
  "description": "A powerful, D3.js-compatible waterfall chart component with stacking capabilities, animations, and extensive customization options",
  "main": "dist/mintwaterfall.cjs.js",
  "module": "dist/mintwaterfall.esm.js",
  "browser": "dist/mintwaterfall.min.js",
  "unpkg": "dist/mintwaterfall.min.js",
  "jsdelivr": "dist/mintwaterfall.min.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/mintwaterfall.esm.js",
      "require": "./dist/mintwaterfall.cjs.js",
      "browser": "./dist/mintwaterfall.min.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "src/",
    "mintwaterfall-*.js",
    "API.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "python -m http.server 8080",
    "dev": "python -m http.server 8080",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prebuild": "rimraf dist",
    "build": "rollup -c && npm run build:types",
    "build:types": "echo 'TypeScript definitions preserved in dist/index.d.ts'",
    "build:watch": "rollup -c -w",
    "build:analyze": "rollup -c --environment ANALYZE",
    "format": "prettier --write \"src/**/*.js\" \"*.js\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.js\" \"*.js\" \"*.md\"",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "version": "npm run build && git add dist/",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "d3js",
    "d3",
    "waterfall",
    "chart",
    "visualization",
    "stacked",
    "data-viz",
    "svg",
    "interactive",
    "animation"
  ],
  "author": {
    "name": "David Duarte",
    "email": "david.duarte@outlook.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coredds/MintWaterfall.git"
  },
  "homepage": "https://coredds.github.io/MintWaterfall/",
  "bugs": {
    "url": "https://github.com/coredds/MintWaterfall/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "d3": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^30.0.5",
    "eslint": "^9.33.0",
    "husky": "^8.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.47.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-filesize": "^10.0.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
